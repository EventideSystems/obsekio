
<header class="border-b border-white/5">
  <!-- Secondary navigation -->
  <nav class="flex overflow-x-auto py-4">
    <ul role="list" class="flex min-w-full flex-none gap-x-6 px-4 text-sm font-semibold leading-6 text-gray-400 sm:px-6 lg:px-8 justify-between">
      <div class="flex mt-2">
        <li>
          <%= link_to 'Templates', templates_checklists_path, class: "mr-3 text-indigo-400" %>
        </li>
        <% if @checklist.present? %>
        <li>
          <div class="flex items-center">
            <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
            </svg>
            <span class="ml-3 text-white">
              <%= @checklist.title %>
            </span>
          </div>
        </li>
        <% end %>
      </div>
      <div>
        <li>
          <%= content_for :header %>
        </li>
      </div>
    </ul>
  </nav>
</header>

