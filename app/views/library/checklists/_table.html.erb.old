<main class="lg:pr-96">
  <!-- Template list -->
  <ul role="list" class="divide-y divide-white/5">
    <% checklists.each do |checklist| %>
      <li class="relative flex items-center space-x-4 px-4 py-4 sm:px-6 lg:px-8">
        <div class="min-w-0 flex-auto">
          <div class="flex items-center gap-x-3">
            <%= render_checklist_status_dot(checklist) %>

            <h2 class="min-w-0 text-sm font-semibold leading-6 text-white">
              <%= link_to templates_checklist_path(checklist), class: "flex gap-x-2" do %>
                <span><%= checklist.title %></span>
              <% end %>
            </h2>
          </div>
          <div class="mt-3 flex items-center gap-x-2.5 text-xs leading-5 text-gray-400">
            <p class="whitespace-nowrap"><span alt="created <%= checklist.created_at %>">Created <%= distance_of_time_in_words(checklist.created_at, DateTime.now) %> ago</span></p>
          </div>
        </div>
        <div class="rounded-full flex-none py-1 px-2 text-xs font-medium ring-1 ring-inset text-gray-400 bg-gray-400/10 ring-gray-400/20"><%= checklist.status.humanize %></div>
        <svg class="h-5 w-5 flex-none text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
        </svg>
      </li>
    <% end %>
  </ul>
</main>


