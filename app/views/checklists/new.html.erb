<h1 class="sr-only">New checklist</h1>

<%= form_with model: @checklist.becomes(Checklist),  data: { turbo: false } do |form| %>
  <% content_for :breadcrumb_controls do %>
    <div class="flex">
      <%= link_to "Cancel", @container, class: "block rounded-md bg-grey-500 px-3 py-2 text-center text-sm font-semibold text-white hover:bg-grey-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-grey-500 mr-2" %>
      <%= form.submit "Save", xclass: "rounded-md bg-yellow-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-yellow-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-yellow-600" %>
    </div>
  <% end %>

  <%= render partial: 'layouts/shared/breadcrumbs' %>

  <%= form.hidden_field :container_type %>
  <%= form.hidden_field :container_id %>

  <div class="flex justify-center mt-3">
    <div class="m-auto w-1/2">
       <p class="mt-1 text-sm leading-6 text-gray-600">Create a new checklist in the '<%= @checklist.container&.name %>' <%= @checklist.container.model_name.human.downcase %>.</p>

      <div class="md:col-span-2 mt-2">
        <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:max-w-xl sm:grid-cols-6">
          <div class="col-span-full">
            <%= form.label :title %>
            <div class="mt-2">
              <%= form.text_field :title %>
            </div>
          </div>

          <div class="col-span-full">
            <%= form.label :type %>
            <div class="mt-2">
              <%= form.select :type, options_for_checklist_type_select %>
            </div>
          </div>

          <div class="col-span-full">
            <%= form.label :description %>
            <div class="mt-2">
              <%= form.text_field :description %>
            </div>
          </div>

          <div class="col-span-full">
            <%= form.label :author_name %>
            <div class="mt-2">
              <%= form.text_field :author_name %>
            </div>
          </div>

          <div class="col-span-full">
            <%= form.label :license %>
            <div class="mt-2">
              <%= form.text_field :license %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

