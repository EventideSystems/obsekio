<ul class="">
  <% checklist.checklist_instances.order(:title).each do |checklist_instance| %>
    <li class="py-4 flex">
      <div class="ml-4 flex space-x-4">
        <div class="min-w-48 max-w-48 flex items-center">
          <h3 class="text-sm font-medium text-gray-900 dark:text-white truncate">
            <%= link_to checklist_instance.title, checklist_instance_path(checklist, checklist_instance), title: checklist_instance.title %>
          </h3>
        </div>

        <div class="flex flex-wrap gap-1">
          <% checklist_instance.items.each do |item| %>
            <%= concurrent_checklist_list_item(checklist_instance, item) %>
          <% end %>
        </div>
      <div>
    </li>
  <% end %>
</ul>
